{% extends 'layout.html.twig' %}
{% block main %}

    <h2>Liste des sorties</h2>

    {% for sortie in sorties %}
        <div class="sorties">
            <a href="{{ path('sortie_detail',{'id':sortie.id}) }}">{{ sortie.nom }}</a>
            ({{ sortie.descriptioninfos }})

        </div>
    {% endfor %}
{% endblock %}

{% block title %}Nos Sorties! | {{ parent() }}{% endblock %}